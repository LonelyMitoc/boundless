<div class='columns'>
  <div class='column is-3'>
    <div class='card'>
      <header class='card-header'>
        <p class='card-header-title'>
          Welcome
          {{user.username}}
        </p>
      </header>
    </div>
  <div class="contributed-list">
    
        <ul>
        <li class="list-item"> <a href="/story/{{story.id}}" class='dropdown-item is-link'>Story Name</a></li>
        </ul>
      </div>
    <div class='dropdown' id='cont-dropdown'>
      <div class='dropdown-trigger'>
        <button
          class='button'
          aria-haspopup='true'
          aria-controls='dropdown-menu2'
        >

          <span class='icon is-small'>
            <i class='fas fa-angle-down' aria-hidden='true'></i>
          </span>
        </button>
      </div>
      
      <div class='dropdown-menu' id='dropdown-menu2' role='menu'>
        <div class='dropdown-content'>
          {{#each user.stories as |story| }}

          {{!-- {{#if story.published }}
          {{story.name}}
          </a>
          <hr class='dropdown-divider' />
          {{/if}} --}}
          <p class='dropdown-item'>
          {{story.name}}
          </p>
          <hr class='dropdown-divider'/>
          {{/each}}
          <p class='dropdown-item'>
            End of the list!
            
          </p>

        </div>
      </div>
    </div>
  </div>


  <div class="column is-9">
      <div class="tabs is-boxed is-medium is-centered">
      <ul>
        <li id="create-button" class="is-active "><a>Create</a></li>
        <li><a>Collaborate</a></li>
      </ul>
    </div>

      <p>
        <div id="create-tab" class=" container">
          <form>
            <input class="input is-primary is-medium mb-2" type="text" placeholder="Title">

            <div class="control mb-2">
              <textarea class="textarea" placeholder="The beginning of your short story..."></textarea>
            </div>

            <div class="control is-align-items-center">
              <button class="button is-medium is-link is-align-items-center">Submit</button>
            </div>

          </form>
        </div>
      </p>
  </div>
</div>



<script src='./js/profile.js'></script>
<script src='./js/logout.js'></script>